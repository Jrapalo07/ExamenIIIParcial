<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.ListaEntrevistas">


  <EditText
      android:id="@+id/txtBuscar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:ems="10"
      android:inputType="text"
      android:hint="Buscador"
      android:background="@color/md_theme_light_inverseOnSurface"
      android:padding="8dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ListView
      android:id="@+id/listView"
      android:layout_width="match_parent"
      android:layout_height="470dp"
      android:layout_marginHorizontal="30dp"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@+id/txtBuscar"
      tools:layout_editor_absoluteX="0dp" />

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@+id/listView"
      tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:text="Ver" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
      tools:layout_editor_absoluteX="-2dp">

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:text="Eliminar" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:text="Actualizar" />
  </LinearLayout>

  <Button
      android:id="@+id/btnRegresar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:backgroundTint="@color/md_theme_light_onPrimaryContainer"
      android:text="REGRESAR AL REGISTRO"
      tools:layout_editor_absoluteX="30dp"
      tools:layout_editor_absoluteY="644dp" />

</androidx.constraintlayout.widget.ConstraintLayout>